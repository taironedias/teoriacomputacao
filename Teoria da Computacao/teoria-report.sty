% altera o tamanho das fontes nos capitulos e sections
\renewcommand{\ABNTEXchapterfont}{\fontfamily{cmr}\fontseries{b}\selectfont}
\renewcommand{\ABNTEXchapterfontsize}{\normalsize}
\renewcommand{\ABNTEXsectionfont}{\normalfont}
\renewcommand{\ABNTEXsectionfontsize}{\normalsize}
\renewcommand{\ABNTEXsubsectionfont}{\bfseries}
\renewcommand{\ABNTEXsubsectionfontsize}{\normalsize}
\renewcommand{\ABNTEXsubsubsectionfont}{\normalfont}
\renewcommand{\ABNTEXsubsubsectionfontsize}{\normalsize}

\newcommand{\professor}[1]{\renewcommand{\professor}{#1}}
\newcommand{\disciplina}[1]{\renewcommand{\disciplina}{#1}}
\newcommand{\departamento}[1]{\renewcommand{\departamento}{#1}}
\newcommand{\imprimirdisciplina}{\disciplina}
\newcommand{\imprimirprofessor}{\professor}
\newcommand{\imprimirdepartamento}{\departamento}

\newcommand*{\taxaespacomeio}{.5}

\newcommand{\imprimircabecalho}{ %
  \begin{center}
    {\ABNTEXchapterfont\bfseries\MakeUppercase{\imprimirinstituicao}} \par
    {\normalfont\MakeUppercase{\imprimirdepartamento}} \par
    {\normalfont\MakeUppercase{\imprimirdisciplina}} \par
    {\ABNTEXchapterfont\bfseries\MakeUppercase{\imprimirtitulo}} \par
    \imprimirautor \par
  \end{center}
  \textbf{Professor:} \imprimirprofessor \par
  \vspace{0.5cm}
}

\makepagestyle{ufrb-report}
  %%cabeçalhos
  \makeevenhead{ufrb-report} %%pagina par
     {}
     {\imprimirtitulo}
     {}
  \makeoddhead{ufrb-report} %%pagina ímpar ou com oneside
     {}
     {\small\imprimirtitulo}
     {}
  \makeheadrule{ufrb-report}{\textwidth}{\normalrulethickness} %linha
  %% rodapé
  \makeevenfoot{ufrb-report}
     {} %%pagina par
     {\thepage}
     {} 
  \makeoddfoot{ufrb-report} %%pagina ímpar ou com oneside
     {}
     {\thepage}
     {}

\makepagestyle{ufrb-report-capitulo}
\makeoddhead{ufrb-report-capitulo}{}{}{}
\makeoddfoot{ufrb-report-capitulo}{}{\thepage}{}

\def\@makechapterhead#1{%
  \vspace{0.5cm}
  {%
    \noindent
    \textbf{\thechapter\hspace{2ex}\MakeUppercase{#1}}
    \par
  }%
  \vspace{0.5cm}
}

% Defining how is typeset the \chapter*
\def\@makeschapterhead#1{%
  {%
    \centering
    \textbf{\MakeUppercase{#1}}
    \par
  }%
  \vspace{\baselineskip}
}

\renewcommand{\arraystretch}{1.5}
